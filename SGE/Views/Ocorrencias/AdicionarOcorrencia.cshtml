@model SGE.Models.Ocorrencia

@{
    ViewData["Title"] = "AdicionarOcorrencia";
}

<h1>AdicionarOcorrencia</h1>

<h4>Ocorrencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarOcorrencia">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoOcorrenciaId" class="control-label"></label>
                <select asp-for="TipoOcorrenciaId" class="form-control" asp-items="ViewBag.TipoOcorrenciaId"></select>
            </div>
            <div class="form-group">
                <input asp-for="UsuarioId" type="hidden" class="form-control" value="@ViewData["usuarioId"]" />
            </div>
            <div class="form-group">
                <label for="UsuarioNome" class="control-label"></label>
                <input for="UsuarioNome" name="UsuarioNome" id="UsuarioNome" class="form-control" readonly value="@ViewData["usuarioNome"]"></input>
            </div>
            <div class="form-group">
                <label asp-for="DataOcorrencia" class="control-label"></label>
                <input asp-for="DataOcorrencia" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" />
                <span asp-validation-for="DataOcorrencia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="AlunoId" type="hidden" class="form-control" value="@ViewData["alunoId"]" />
            </div>

            <div class="form-group">
                <label for="AlunoNome" class="control-label">Nome do Aluno</label>
                <input for="AlunoNome" name="AlunoNome" id="AlunoNome" class="form-control" value="@ViewData["alunoNome"]" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CadAtivo" checked="checked" /> @Html.DisplayNameFor(model => model.CadAtivo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CadInativo" class="control-label"></label>
                <input asp-for="CadInativo" class="form-control" />
                <span asp-validation-for="CadInativo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Finalizado" /> @Html.DisplayNameFor(model => model.Finalizado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataFinalizado" class="control-label"></label>
                <input asp-for="DataFinalizado" class="form-control" />
                <span asp-validation-for="DataFinalizado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tratativa" class="control-label"></label>
                <input asp-for="Tratativa" class="form-control" />
                <span asp-validation-for="Tratativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
